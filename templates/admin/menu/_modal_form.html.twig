<div class="p-2">
  <div class="p-3 rounded-4 border bg-white"
       style="background: linear-gradient(180deg, rgba(13,110,253,.06), #fff);">

    <div class="d-flex align-items-start gap-3 mb-3">
      <div class="rounded-circle d-flex align-items-center justify-content-center"
           style="width:44px;height:44px;background:rgba(13,110,253,.12);">
        <i class="bi bi-journal-text fs-4 text-primary"></i>
      </div>
      <div>
        <div class="fw-bold fs-5 mb-1">Menu</div>
        <div class="text-muted small">Renseigne les informations principales du menu.</div>
      </div>
    </div>

    {{ form_start(form, { attr: { id: 'menuAjaxForm' } }) }}

      <div class="row g-3">
        <div class="col-md-6">{{ form_row(form.title) }}</div>
        <div class="col-md-6">{{ form_row(form.themeLabel) }}</div>

        <div class="col-12">{{ form_row(form.description) }}</div>
        <div class="col-12">{{ form_row(form.conditions) }}</div>

        <div class="col-md-4">{{ form_row(form.minPeople) }}</div>
        <div class="col-md-4">{{ form_row(form.minPrice) }}</div>
        <div class="col-md-4">{{ form_row(form.stock) }}</div>

        <div class="col-12">
          <div class="form-check form-switch">
            {{ form_widget(form.isActive, { attr: { class: 'form-check-input', role: 'switch' } }) }}
            <label class="form-check-label" for="{{ form.isActive.vars.id }}">Actif</label>
          </div>
          {{ form_errors(form.isActive) }}
        </div>
      </div>

      <div class="mt-4 d-flex gap-2">
        <button class="btn btn-primary btn-lg">
          <i class="bi bi-check2-circle me-1"></i> Enregistrer
        </button>
        <button type="button" class="btn btn-outline-secondary btn-lg" data-bs-dismiss="modal">
          Annuler
        </button>
      </div>

    {{ form_end(form) }}
  </div>
</div>
