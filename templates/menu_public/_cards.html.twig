<div class="row g-3">
  {% for m in menus %}

    {# --- choisir l'image de couverture --- #}
    {% set cover = null %}
    {% for img in m.images %}
      {% if img.isCover %}
        {% set cover = img %}
      {% endif %}
    {% endfor %}
    {% if cover is null %}
      {% set cover = m.images|first %}
    {% endif %}

    <div class="col-md-6">
      <div class="card h-100 border-0 shadow-sm overflow-hidden" style="border-radius: 18px;">

        {# ✅ image DANS la card #}
        {% if cover %}
          <img
            src="{{ asset(cover.imagePath) }}"
            alt="{{ cover.altText ?? m.title }}"
            class="card-img-top"
            style="height: 170px; object-fit: cover;"
          >
        {% else %}
          <div class="bg-light d-flex align-items-center justify-content-center"
               style="height:170px;">
            <span class="text-muted small">
              <i class="bi bi-image me-1"></i>Aucune image
            </span>
          </div>
        {% endif %}

        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-start gap-3">
            <div>
              <h5 class="fw-bold mb-1">{{ m.title }}</h5>
              <div class="text-muted small">
                {% if m.themeLabel %}
                  <span class="badge text-bg-light border">
                    <i class="bi bi-tag me-1"></i>{{ m.themeLabel }}
                  </span>
                {% endif %}
              </div>
            </div>

            {% if m.stock is not null %}
              <span class="badge {{ m.stock > 0 ? 'bg-success' : 'bg-secondary' }}">
                Stock: {{ m.stock }}
              </span>
            {% endif %}
          </div>

          <p class="text-muted mt-3 mb-3" style="min-height: 48px;">
            {{ m.description ?? '—' }}
          </p>

          <div class="d-flex justify-content-between align-items-center">
            <div>
              <div class="fw-semibold">
                <i class="bi bi-people me-1"></i> Min: {{ m.minPeople }}
              </div>
              <div class="fw-bold text-primary">
                <i class="bi bi-cash-coin me-1"></i> {{ m.minPrice }} €
              </div>
            </div>

            <a class="btn btn-outline-primary" href="{{ path('menu_show', { id: m.id }) }}"
>
              Voir détail <i class="bi bi-arrow-right ms-1"></i>
            </a>
          </div>
        </div>

      </div>
    </div>

  {% else %}
    <div class="col-12">
      <div class="alert alert-warning border-0 shadow-sm" style="border-radius: 16px;">
        Aucun menu ne correspond à tes filtres.
      </div>
    </div>
  {% endfor %}
</div>
