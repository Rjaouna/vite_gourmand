{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="py-5" style="min-height: calc(100vh - 120px); background: linear-gradient(135deg, rgba(13,110,253,.10), rgba(25,135,84,.08));">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">

        <div class="text-center mb-4">
         
          <h1 class="fw-bold mb-1">Créer un compte</h1>
          <p class="text-muted mb-0">Remplis tes informations pour commander plus facilement</p>
        </div>

        {# erreurs flash email si tu utilises verify-email #}
        {% for flash_error in app.flashes('verify_email_error') %}
          <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div class="card border-0 shadow-sm" style="border-radius: 18px;">
          <div class="card-body p-4 p-lg-5">

            {# erreurs globales du form #}
            {% if form_errors(registrationForm) %}
              <div class="alert alert-danger mb-4">
                {{ form_errors(registrationForm) }}
              </div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="row g-3">

              {# Identité #}
              {% if registrationForm.firstName is defined %}
                <div class="col-md-6">
                  {{ form_row(registrationForm.firstName, {
                    label: 'Prénom',
                    attr: { class: 'form-control form-control-lg', placeholder: 'Votre prénom' }
                  }) }}
                </div>
              {% endif %}

              {% if registrationForm.lastName is defined %}
                <div class="col-md-6">
                  {{ form_row(registrationForm.lastName, {
                    label: 'Nom',
                    attr: { class: 'form-control form-control-lg', placeholder: 'Votre nom' }
                  }) }}
                </div>
              {% endif %}

              {% if registrationForm.phone is defined %}
                <div class="col-md-6">
                  {{ form_row(registrationForm.phone, {
                    label: 'Téléphone',
                    attr: { class: 'form-control form-control-lg', placeholder: 'Ex: 06 00 00 00 00' }
                  }) }}
                </div>
              {% endif %}

              {# Compte #}
              <div class="col-md-6">
                {{ form_row(registrationForm.email, {
                  label: 'Email',
                  attr: { class: 'form-control form-control-lg', placeholder: 'ex: nom@email.com', autocomplete: 'email' }
                }) }}
              </div>

              {# Adresse #}
              {% if registrationForm.addressLine1 is defined %}
                <div class="col-12">
                  {{ form_row(registrationForm.addressLine1, {
                    label: 'Adresse',
                    attr: { class: 'form-control form-control-lg', placeholder: 'Rue, numéro...' }
                  }) }}
                </div>
              {% endif %}

              {% if registrationForm.addressLine2 is defined %}
                <div class="col-12">
                  {{ form_row(registrationForm.addressLine2, {
                    label: 'Complément d’adresse',
                    required: false,
                    attr: { class: 'form-control form-control-lg', placeholder: 'Bâtiment, étage, etc. (optionnel)' }
                  }) }}
                </div>
              {% endif %}

              {% if registrationForm.postalCode is defined %}
                <div class="col-md-4">
                  {{ form_row(registrationForm.postalCode, {
                    label: 'Code postal',
                    attr: { class: 'form-control form-control-lg', placeholder: 'Ex: 33000' }
                  }) }}
                </div>
              {% endif %}

              {% if registrationForm.city is defined %}
                <div class="col-md-4">
                  {{ form_row(registrationForm.city, {
                    label: 'Ville',
                    attr: { class: 'form-control form-control-lg', placeholder: 'Ex: Bordeaux' }
                  }) }}
                </div>
              {% endif %}

              {% if registrationForm.country is defined %}
                <div class="col-md-4">
                  {{ form_row(registrationForm.country, {
                    label: 'Pays',
                    attr: { class: 'form-control form-control-lg', placeholder: 'Ex: France' }
                  }) }}
                </div>
              {% endif %}

              {# Mot de passe #}
              <div class="col-12">
                {{ form_row(registrationForm.plainPassword, {
                  label: 'Mot de passe',
                  attr: { class: 'form-control form-control-lg', placeholder: 'Choisissez un mot de passe', autocomplete: 'new-password' }
                }) }}
                <div class="form-text">
                  10 caractères min, avec majuscule, minuscule, chiffre et caractère spécial.
                </div>
              </div>

              {# Conditions (si existe) #}
              {% if registrationForm.agreeTerms is defined %}
                <div class="col-12">
                  <div class="form-check mt-1">
                    {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'form-check-input' } }) }}
                    {{ form_label(registrationForm.agreeTerms, null, { label_attr: { class: 'form-check-label' } }) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                  </div>
                </div>
              {% endif %}
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100 mt-4">
              Créer mon compte
            </button>

            <div class="text-center mt-3">
              <span class="text-muted">Déjà un compte ?</span>
              <a class="text-decoration-none fw-semibold" href="{{ path('app_login') }}">Connexion</a>
            </div>

            {{ form_end(registrationForm) }}

          </div>
        </div>

      </div>
    </div>
  </div>
</div>
{% endblock %}
